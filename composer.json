{
  "name": "causal/push_notification",
  "type": "typo3-cms-extension",
  "description": "Service to let extension developer send notifications to iOS and Android devices.",
  "keywords": [
    "TYPO3 CMS"
  ],
  "homepage": "https://github.com/xperseguers/t3ext-push_notification",
  "authors": [
    {
      "name": "Xavier Perseguers",
      "email": "xavier@causal.ch",
      "homepage": "https://www.causal.ch",
      "role": "Developer"
    }
  ],
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=7.2.0",
    "typo3/cms-core": "^8.7 || ^9.5"
  },
  "autoload": {
    "psr-4": {
      "Causal\\PushNotification\\": "Classes/"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/push_notification ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/push_notification"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.1.x-dev"
    },
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  }
}
